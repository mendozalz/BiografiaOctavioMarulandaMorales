---
import Layout from "@/layouts/Layout.astro";
import Carousel from "@/components/Caruosel.tsx";
import LibrosContainer from "../components/LibrosContainer.astro";
import "../../global.css";
import Footer from "@/components/Footer.astro";
import ZoomParallax from "@/components/ZoomParallax";
import ParrafoAnimado from "@/components/ParrafoAnimado";

const parrafo =
  "It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.";

const parrafo2 =
  "Lorem Ipsum es simplemente el texto de relleno de las imprentas y archivos de texto. Lorem Ipsum ha sido el texto de relleno estándar de las industrias desde el año 1500, cuando un impresor (N. del T. persona que se dedica a la imprenta) desconocido usó una galería de textos y los mezcló de tal manera que logró hacer un libro de textos especimen.";
---

<Layout title="Octavio Marulanda Morales">
  <Carousel client:load />
  <LibrosContainer />
  <ZoomParallax client:load />
  <div style={{ paddingTop: "15px" }}></div>
  <ParrafoAnimado parrafo={parrafo} client:load />
  <ParrafoAnimado parrafo={parrafo2} client:load />
  <div style={{ paddingBottom: "35px" }}></div>
</Layout>
