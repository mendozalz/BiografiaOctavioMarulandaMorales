---
import { getCollection } from "astro:content";
import EncapsulamientoLibros from "./EncapsulamientoLibros";

const posts = await getCollection("libros");

---

<div
  id="libros"
  class="bg-white w-full h-auto lg:max-w-container lg:h-auto py-10 m-auto grid place-items-center overflow-hidden p-1 lg:pb-10"
>
  
  <EncapsulamientoLibros posts={posts} client:only="react"/>
</div>
